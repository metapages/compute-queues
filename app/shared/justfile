# Always use locally installed tools (always pin versions)

set shell := ["bash", "-c"]
set dotenv-load := true
set export := true

# minimal formatting, bold is very useful

bold := '\033[1m'
normal := '\033[0m'

@_help:
    just --list --unsorted --list-heading $'Commands:\n'
    echo -e ""

# Quick compile checks
@check:
    deno check src/mod.ts
    echo "âœ… shared typescript compilation"

# Lint
@lint:
    deno lint

# Lint and fix issues
@fix:
    deno lint --fix

@test:
    deno test --allow-all --unstable-kv src

@build:
    deno task build
