{
  "files.exclude": {
    "**/.cache": true,
    "**/.deno": true,
    "**/app/api/assets": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/app/api/assets": true,
    "**/dist": true
  },
  "deno.enable": true,
  "deno.lint": true,
  "deno.disablePaths": ["app/browser"],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "denoland.vscode-deno",
  "files.watcherExclude": {
    "**/dist": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  }
}
